<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Functionalities.Maps.MapsActivity"
    android:orientation="vertical"
    android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".684">

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/map"
                            class="com.google.android.gms.maps.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="500dp" />
                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="#030303"
                    android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/titleEventMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Titulo"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="40dp"/>

                                <TextView
                                    android:id="@+id/subtitleEventMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Local(ou qualquer outra informacao)"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:id="@+id/ticketsEventMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantidade de ingressos"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"/>
                        </LinearLayout>

                </RelativeLayout>
        </LinearLayout>
</LinearLayout>

