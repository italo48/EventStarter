<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/buttonSplashScreenEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SplashScreen"
            android:text="Splash screen" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Login"
            android:text="Login" />

        <Button
            android:id="@+id/buttonTeste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CadastroUsuario"
            android:text="Cadastro de usuario" />

        <Button
            android:id="@+id/buttonRegisterEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CadastroEvento"
            android:text="Cadastro de evento" />

        <Button
            android:id="@+id/buttonUserDashb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="UsuarioDashboard"
            android:text="Dashboard do usuario" />

        <Button
            android:id="@+id/buttonUserPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="UsuarioPerfil"
            android:text="Perfil do usuario" />

        <Button
            android:id="@+id/buttonPontoDeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CadastroPontoDeVenda"
            android:text="Cadastra PV" />

        <Button
            android:id="@+id/buttonMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Maps"
            android:text="Maps" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>